<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Activity.First.FirstDollImageSettingActivity">

    <ImageButton
        android:id="@+id/firstdollIcon_imageButton_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backicon"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/firstIcon_imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/whiteround"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/firstdollIcon_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbuttonbg"
        android:text="@string/save_button_text"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>


</LinearLayout>