<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity.SettingActivity.UserSettingActivity.AccountIconSettingActivity">

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backicon"
        android:background="#000000"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <com.example.sotsugyou.MyLinearLayout.FlowRadioGroup
        android:id="@+id/flowradioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:layout_marginLeft="70dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:button="@null"
                android:drawableStart="@drawable/radio_selector"/>

            <RadioButton
                android:id="@+id/rb2"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:drawableStart="@drawable/radio_selector"
                android:button="@null"/>

            <RadioButton
                android:id="@+id/rb3"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:drawableStart="@drawable/radio_selector"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:button="@null"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb4"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:button="@null"
                android:drawableStart="@drawable/radio_selector"
                />

            <RadioButton
                android:id="@+id/rb5"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:drawableStart="@drawable/radio_selector"
                android:button="@null"
                />

            <RadioButton
                android:id="@+id/rb6"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:drawableStart="@drawable/radio_selector"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:button="@null"
                />

        </LinearLayout>

    </com.example.sotsugyou.MyLinearLayout.FlowRadioGroup>



    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/nextbutton_background"
        android:textSize="24sp"
        android:text="@string/save_button_text"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        android:textColor="@color/white"/>

</LinearLayout>