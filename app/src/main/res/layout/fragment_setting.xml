<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".Activity.Fragment.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainsetting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_title"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="90dp"/>

        <LinearLayout
            android:id="@+id/setting_account_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:background="@drawable/edittextbackground">

            <ImageView
                android:id="@+id/setting_userIcon_imageView"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setting_userName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/mainsetting_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="@string/setting_account_setting_title"/>
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/setting_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextbackground"
            android:scrollbarSize="0dp" />

        <TextView
            android:id="@+id/setting_hint_textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/edittextbackground"/>

    </LinearLayout>

</FrameLayout>